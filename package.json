{
  "name": "designsnack-laws-patterns-backend",
  "version": "1.0.0",
  "description": "Backend API for DESIGNSNACK Laws & Patterns mobile app",
  "main": "index.js",
  "scripts": {
    "dev": "vercel dev",
    "deploy": "vercel --prod",
    "seed": "tsx scripts/seed-questions.ts",
    "generate": "tsx scripts/generate-questions.ts",
    "add-principle": "dotenv -e .env -- tsx scripts/add-principle.ts",
    "expand-questions": "dotenv -e .env -- tsx scripts/expand-questions.ts",
    "audit-content": "dotenv -e .env -- tsx scripts/audit-content.ts",
    "test-principle": "dotenv -e .env -- tsx scripts/test-principle-creation.ts",
    "test-update": "dotenv -e .env -- tsx scripts/test-update-principle.ts",
    "demo-audit": "dotenv -e .env -- tsx scripts/demo-audit-selection.ts",
    "fix-data": "dotenv -e .env -- tsx scripts/fix-data-structure.ts",
    "auto-fix-data": "dotenv -e .env -- tsx scripts/auto-fix-data.ts",
    "check-questions": "dotenv -e .env -- tsx scripts/check-questions.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ux",
    "design",
    "principles",
    "quiz",
    "api",
    "vercel",
    "supabase"
  ],
  "author": "Thomas Veit",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.5",
    "@vercel/node": "^3.0.21",
    "dotenv": "^17.2.2",
    "openai": "^4.20.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
